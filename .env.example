# Anthropic API Key (required)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Google Custom Search (optional - for web research)
GOOGLE_API_KEY=your-google-api-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id

# OpenAI API Key (optional - alternative LLM provider)
OPENAI_API_KEY=sk-your-openai-key

# Database Configuration
DB_PATH=.brandos/cache/brandos.db

# ChromaDB Configuration (for ORACLE module)
CHROMA_DB_PATH=.brandos/cache/chroma_db

# LLM Configuration
DEFAULT_LLM_PROVIDER=anthropic
DEFAULT_MODEL=claude-sonnet-4-5-20250929
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=8000

# Daemon Configuration
DAEMON_WATCH_INTERVAL=1000
DAEMON_AUTO_PROCESS=true

# Context Manager Configuration
CONTEXT_MAX_HISTORY=100
CONTEXT_EMBEDDING_MODEL=text-embedding-3-small

# Quality Thresholds
MIN_SOURCE_QUALITY_TIER=tier2
MIN_CONFIDENCE_SCORE=0.7
MAX_VARIANCE_THRESHOLD=0.1

# Logging
LOG_LEVEL=info
LOG_FILE=.brandos/logs/brandos.log
