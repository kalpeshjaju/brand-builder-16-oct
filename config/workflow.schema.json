{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/brandos/workflow.schema.json",
  "title": "Brandos Workflow",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "features": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "useOracle": { "type": "boolean", "default": false }
      }
    },
    "stages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "agents"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "agents": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["name"],
              "additionalProperties": false,
              "properties": {
                "name": { "type": "string", "minLength": 1 }
              }
            }
          }
        }
      }
    }
  },
  "required": ["stages"]
}

